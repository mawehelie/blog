<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400' rel='stylesheet' type='text/css'>
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <link href='http://fonts.googleapis.com/css?family=Libre+Baskerville' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="sidebar">
		<div id="logo">
			<%= link_to root_path do %>
				<%= image_tag "me.png" %>
			<% end %> 
		</div>

		<ul>
			<li class="category">Wehelie Adan</li>
			<li> <%= link_to "Blog", root_path %></li>
			<li><%= link_to "About", about_path %></li>
		</ul>

		<ul>
			<li class="category">Social</li>
			<li> <a href="https://twitter.com/geogrefer"><i class="fa fa-twitter"></i></a></li>
			<li><a href="http://github.com/wehelie"><i class="fa fa-github"></i></a></li>
			<li><a href="mailto:wehelie@gmail.com"><i class="fa fa-envelope-square"></i></a></li>
		</ul>
		<% if !user_signed_in? %>
		<p class="sign_in">Admin Login</p>
		<% end %>
	</div>

	<div id="main_content">
		<div id="header">
		<% if current_page?(root_path)  %>
			<p>ALL POSTS</p>
		<% elsif current_page?(about_path)  %>
			<p>ABOUT</p>
		<% else %>
		<%= link_to "Back to All Posts", root_path  %>
		<% end  %>
			<% if user_signed_in? %>
			<div class="buttons">
				<button class="button"><%= link_to "New Post", new_post_path %></button>
				<button class="button"><i class="fa fa-sign-out"></i>Log out</button>
			</div>
			<% end %>
		</div>

		<% flash.each do |name, msg| %> 
			<%= content_tag(:div, msg, class: "alert") %>
		<% end %>

		<%= yield %>
	</div>



</body>
</html>
